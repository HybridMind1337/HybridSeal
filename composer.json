{
  "name": "hybridmind1337/hybridseal",
  "description": "Minimal, dependency-free PHP library for generating and validating signed, expirable, URL-safe tokens (HS256).",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "hybridmind",
    "token",
    "hmac",
    "signature",
    "csrf",
    "password reset",
    "auth",
    "jwt-like",
    "security"
  ],
  "require": {
    "php": "^8.2",
    "ext-ctype": "*",
    "ext-hash": "*",
    "ext-json": "*",
    "ext-redis": "*",
    "http-interop/http-factory-guzzle": "^1.2",
    "nyholm/psr7": "^1.8",
    "psr/http-message": "^2.0",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
  "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11"
},
  "scripts": {
    "test": "phpunit --colors=always",
    "test:unit": "phpunit --testsuite Unit --colors=always",
    "lint": "php -l $(git ls-files '*.php')",
    "stan": "phpstan analyse --memory-limit=512M"
  },
  "autoload": {
    "psr-4": {
      "HybridMind\\HybridSeal\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HybridMind\\HybridSeal\\Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "archive": {
    "exclude": [
      "/.github",
      "/.gitignore",
      "/.gitattributes",
      "/phpunit.xml*",
      "/tests",
      "/.editorconfig",
      "/.vscode",
      "/.idea"
    ]
  }
}
